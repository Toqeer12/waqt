<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Profile">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout1">
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/profile_image"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/images"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#ed1f24"/>
    <TextView
         android:layout_centerInParent="true"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="22dp"
        android:layout_below="@+id/profile_image"
        android:paddingTop="10dp"
        android:text="Hello"
         android:gravity="center_horizontal"
        android:id="@+id/name" />

    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:layout_below="@+id/layout1"
        android:id="@+id/scr_layout">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/ver_layout"
            >


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout2"
                android:layout_below="@+id/layout1">

                <ImageView
                    android:layout_width="72px"
                    android:paddingTop="10dp"
                    android:layout_height="72px"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username"
                    android:hint="Nick Name"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout3"
                android:layout_below="@+id/layout2">

                <ImageView
                    android:layout_width="72px"
                    android:paddingTop="10dp"
                    android:layout_height="72px"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username2"
                    android:hint="DOB"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout4"

                android:layout_below="@+id/layout3">

                <ImageView
                    android:layout_width="72px"

                    android:layout_height="72px"
                    android:paddingTop="10dp"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username3"
                    android:hint="Material Status"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout5"
                android:layout_below="@+id/layout4">

                <ImageView
                    android:layout_width="72px"
                    android:paddingTop="10dp"
                    android:layout_height="72px"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username4"
                    android:hint="Highest Qualification"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout6"
                android:layout_below="@+id/layout5">

                <ImageView
                    android:layout_width="72px"
                    android:paddingTop="10dp"
                    android:layout_height="72px"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username5"
                    android:hint="Other Detail"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout7"
                android:layout_below="@+id/layout6">

                <ImageView
                    android:layout_width="72px"
                    android:paddingTop="10dp"
                    android:layout_height="72px"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username6"
                    android:hint="Driving Licence #"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/layout8"
                android:layout_below="@+id/layout7">

                <ImageView
                    android:layout_width="72px"
                    android:paddingTop="10dp"
                    android:layout_height="72px"
                    android:src="@drawable/ic_profile"
                    android:paddingLeft="10dp"/>
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/username7"
                    android:hint="Licence Expire"
                    />
            </LinearLayout>
        </LinearLayout>


</ScrollView>
</RelativeLayout>
