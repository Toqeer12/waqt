<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/dashboardlayout"
    android:background="@drawable/waqt_dashboard_bg"

    tools:context=".activity.Dashboard">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/attendance_selector"
        android:id="@+id/myattendance" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/check_out_selecor"
        android:id="@+id/checkout"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true" />
    <Button
        android:id="@+id/myleave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/leave_selector"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/checkin" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/arrow_selector"
        android:id="@+id/checkin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/checkout" />
</RelativeLayout>